<h1>Your profile</h1>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <ul>
        <li>Name: <%= @user.name %></li>
        <li>Email: <%= @user.email %></li>
        <li>Role: <%= @user.role %></li>
        <li>Phone Number: <%= @user.phone_number %></li>
        <li>Location: <%= @user.location %></li>
        <li>Postcode: <%= @user.postcode %></li>
      </ul>
    </section>
  </aside>
</div>